<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_gravity="center_vertical"    android:layout_marginLeft="@dimen/margin_distance_20"    android:layout_marginRight="@dimen/margin_distance_20"    android:background="@drawable/warnint_dialog_bg"    android:orientation="vertical">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="10dp"        android:layout_marginLeft="20dp"        android:layout_marginRight="20dp"        android:layout_marginTop="15dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="分享"            android:textColor="@color/text_color_black_small"            android:textSize="20sp" />        <ImageView            android:id="@+id/share_close"            style="@style/WrapAndWrap"            android:layout_alignParentRight="true"            android:layout_gravity="right"            android:background="@null"            android:src="@drawable/close_btn" />    </RelativeLayout>    <View        android:layout_width="match_parent"        android:layout_height="@dimen/divider_small_height"        android:layout_marginLeft="@dimen/margin_distance_40"        android:layout_marginRight="@dimen/margin_distance_40"        android:background="@color/divider_color" />    <LinearLayout        style="@style/MatchAndWrap.Horizontal"        android:layout_marginTop="@dimen/margin_distance_40">        <TextView            android:id="@+id/share_qq"            style="@style/ZeroAndWrap"            android:layout_weight="1"            android:drawablePadding="@dimen/margin_distance_10"            android:drawableTop="@drawable/share_qq_icon"            android:gravity="center"            android:text="QQ"            android:textColor="@color/text_color_black_small" />        <TextView            android:id="@+id/share_friend"            style="@style/ZeroAndWrap"            android:layout_weight="1"            android:drawablePadding="@dimen/margin_distance_10"            android:drawableTop="@drawable/share_weixin_icon"            android:gravity="center"            android:text="微信好友"            android:textColor="@color/text_color_black_small" />        <TextView            android:id="@+id/share_weixin"            style="@style/ZeroAndWrap"            android:layout_weight="1"            android:drawablePadding="@dimen/margin_distance_10"            android:drawableTop="@drawable/share_weixin_friend_icon"            android:gravity="center"            android:text="朋友圈"            android:textColor="@color/text_color_black_small" />    </LinearLayout>    <LinearLayout        style="@style/MatchAndWrap.Horizontal"        android:layout_marginTop="@dimen/margin_distance_40"        android:paddingBottom="@dimen/margin_distance_40">        <TextView            android:id="@+id/share_qq_zone"            style="@style/ZeroAndWrap"            android:layout_weight="1"            android:drawablePadding="@dimen/margin_distance_10"            android:drawableTop="@drawable/share_qq_zone_icon"            android:gravity="center"            android:text="QQ空间"            android:textColor="@color/text_color_black_small" />        <TextView            android:id="@+id/share_contacts"            style="@style/ZeroAndWrap"            android:layout_weight="1"            android:drawablePadding="@dimen/margin_distance_10"            android:drawableTop="@drawable/share_contacts_icon"            android:gravity="center"            android:text="联系人"            android:textColor="@color/text_color_black_small" />        <TextView            android:id="@+id/share_weibo"            style="@style/ZeroAndWrap"            android:layout_weight="1"            android:drawablePadding="@dimen/margin_distance_10"            android:drawableTop="@drawable/share_weibo_icon"            android:gravity="center"            android:text="新浪微博"            android:textColor="@color/text_color_black_small"            android:visibility="invisible" />    </LinearLayout></LinearLayout>